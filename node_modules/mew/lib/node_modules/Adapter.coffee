    run : ->

    receive : (message)->
        envelop ={
            adapter : @name,
            message : message
        }
        @mew.brain.receive envelop

    send : (envelop,message)->

class MultiAdapter extends Adapter
    constructor : (@mew,@name)->
        super @mew,@name

module.exports = Adapter
module.exports.MultiAdapter = MultiAdapter